{
	"private": true,
	"scripts": {
		"build": "webpack --mode=production",
		"format": "sort-package-json",
		"lint": "run-p lint:*",
		"lint-fix": "run-p 'lint:* -- --fix'",
		"release": "VER=$(daily-version) run-s build version release:*",
