{
	"private": true,
	"scripts": {
		"build": "webpack --mode=production",
		"format": "sort-package-json",
		"lint": "run-p lint:*",
		"lint-fix": "run-p 'lint:* -- --fix'",
		"lint:css": "stylelint src/**/*.css",
		"release": "VER=$(daily-version) run-s build version release:*",
		"release:amo": "web-ext-submit --source-dir dist",
		"release:cws": "webstore upload --source=dist --auto-publish",
		"test": "run-s lint:* build",
		"version": "dot-json dist/manifest.json version $VER",
		"watch": "webpack --mode=development --watch"
	},
	"dependencies": {
		"eslint-plugin-import": "^2.20.2",
		"js-base64": "^2.5.2",
		"plantuml-encoder": "^1.4.0",
		"url-parse": "^1.4.7",
		"webext-base-css": "^1.1.0",
		"webext-content-script-ping": "^2.0.1",
		"webext-domain-permission-toggle": "^1.0.1",
		"webext-dynamic-content-scripts": "^6.0.4",
		"webext-options-sync-per-domain": "^1.0.0",
		"webextension-polyfill": "^0.4.0"
	},
	"devDependencies": {
		"@babel/core": "^7.10.1",
		"@babel/preset-env": "^7.10.1",
		"babel-eslint": "^10.1.0",
		"babel-loader": "^8.1.0",
		"chrome-webstore-upload-cli": "^1.2.0",
		"copy-webpack-plugin": "^5.0.3",
		"daily-version": "^0.12.0",
		"dot-json": "^1.1.0",
		"eslint": "^6.8.0",
		"npm-run-all": "^4.1.5",
		"size-plugin": "^1.2.0",
		"sort-package-json": "^1.44.0",
		"stylelint": "^10.1.0",
		"terser-webpack-plugin": "^1.3.0",
		"web-ext": "^4.1.0",
		"web-ext-submit": "^4.1.0",
		"webpack": "^4.36.1",
		"webpack-cli": "^3.3.11"
	}
}
