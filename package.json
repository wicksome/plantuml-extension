		"webext-options-sync-per-domain": "^1.0.0",
		"webextension-polyfill": "^0.6.0"
	},
	"devDependencies": {
		"@babel/core": "^7.10.2",
		"@babel/preset-env": "^7.10.2",
		"babel-eslint": "^10.1.0",
		"babel-loader": "^8.1.0",
		"chrome-webstore-upload-cli": "^1.2.0",
		"copy-webpack-plugin": "^6.0.2",
